<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <projectService
            serviceInterface="dev.mcp.extensions.lsp.core.interfaces.HoverInfoProvider"
            serviceImplementation="dev.mcp.extensions.lsp.languages.python.PythonHoverInfoProvider"/>
    <projectService
            serviceInterface="dev.mcp.extensions.lsp.core.interfaces.DefinitionFinder"
            serviceImplementation="dev.mcp.extensions.lsp.languages.python.PythonDefinitionFinder"/>
    <projectService
            serviceInterface="dev.mcp.extensions.lsp.core.interfaces.SymbolExtractor"
            serviceImplementation="dev.mcp.extensions.lsp.languages.python.PythonSymbolExtractor"/>
    <projectService
            serviceInterface="dev.mcp.extensions.lsp.core.interfaces.ReferenceFinder"
            serviceImplementation="dev.mcp.extensions.lsp.languages.python.PythonReferenceFinder"/>
  </extensions>
</idea-plugin>
