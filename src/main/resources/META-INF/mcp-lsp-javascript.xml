<!-- JavaScript/TypeScript-specific services registration -->
<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <projectService
            serviceInterface="dev.mcp.extensions.lsp.core.interfaces.SymbolExtractor"
            serviceImplementation="dev.mcp.extensions.lsp.languages.javascript.JavaScriptSymbolExtractor"/>
    <projectService
            serviceInterface="dev.mcp.extensions.lsp.core.interfaces.DefinitionFinder"
            serviceImplementation="dev.mcp.extensions.lsp.languages.javascript.JavaScriptDefinitionFinder"/>
    <projectService
            serviceInterface="dev.mcp.extensions.lsp.core.interfaces.ReferenceFinder"
            serviceImplementation="dev.mcp.extensions.lsp.languages.javascript.JavaScriptReferenceFinder"/>
    <projectService
            serviceInterface="dev.mcp.extensions.lsp.core.interfaces.HoverInfoProvider"
            serviceImplementation="dev.mcp.extensions.lsp.languages.javascript.JavaScriptHoverInfoProvider"/>
  </extensions>
</idea-plugin>
